{
   "extends": "./tsconfig.json",
   "compilerOptions": {
      "outDir": "../../dist/out-tsc",
      "module": "Node16",
      "moduleResolution": "Node16",
      "rootDir": ".",
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "types": [
         "node",
         "@nx/react/typings/cssmodule.d.ts",
         "@nx/react/typings/image.d.ts"
      ]
   },
   "exclude": [
      "../../jest.config.ts",
      "src/**/*.spec.ts",
      "src/**/*.test.ts",
      "src/**/*.spec.tsx",
      "src/**/*.test.tsx",
      "src/**/*.spec.js",
      "src/**/*.test.js",
      "src/**/*.spec.jsx",
      "src/**/*.test.jsx",
      "**/*.stories.ts",
      "**/*.stories.js",
      "**/*.stories.jsx",
      "**/*.stories.tsx"
   ],
   "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
   "files": ["src/index.ts"]
}
